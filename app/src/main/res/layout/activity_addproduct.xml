<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/appbackground"
    android:layout_height="match_parent"
    tools:context=".Product.Addproduct">
    <androidx.cardview.widget.CardView
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20sp"
        android:padding="20sp"
        app:cardElevation="10sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/producttv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="46dp"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:paddingLeft="10sp"
                android:id="@+id/productnanme"
                android:layout_width="250sp"
                android:layout_height="40sp"
                android:layout_below="@id/producttv"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="41dp"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="-1dp"
                android:layout_marginEnd="43dp"
                android:layout_marginRight="43dp"
                android:background="@drawable/edittext" />

            <TextView
                android:id="@+id/comptv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productnanme"
                android:layout_alignLeft="@+id/producttv"
                android:layout_marginTop="10sp"
                android:text="Company Name"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Spinner
                android:id="@+id/compname"
                android:inputType="textEmailAddress"
                android:layout_width="250sp"
                android:layout_height="40sp"
                android:layout_below="@id/comptv"
                android:layout_alignLeft="@+id/producttv"
                android:background="@drawable/textview_borders"
                />

            <TextView
                android:id="@+id/partytv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/compname"
                android:layout_alignLeft="@+id/compname"
                android:layout_marginTop="10sp"
                android:text="Party Name"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:paddingLeft="10sp"
                android:id="@+id/productparty"
                android:layout_width="250sp"
                android:layout_height="40sp"
                android:layout_below="@id/partytv"
                android:layout_alignLeft="@+id/partytv"
                android:background="@drawable/edittext" />
            <TextView
                android:id="@+id/mrptv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productparty"
                android:layout_alignLeft="@+id/productparty"
                android:layout_marginTop="10sp"
                android:text="MRP"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:paddingLeft="10sp"
                android:id="@+id/productmrp"
                android:layout_width="250sp"
                android:inputType="number"
                android:layout_height="40sp"
                android:layout_below="@id/mrptv"
                android:layout_alignLeft="@+id/mrptv"
                android:background="@drawable/edittext" />
            <TextView
                android:id="@+id/quantitytv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productmrp"
                android:layout_alignLeft="@+id/mrptv"
                android:layout_marginTop="10sp"
                android:text="Quantity"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:paddingLeft="10sp"
                android:id="@+id/productquantity"
                android:inputType="number"
                android:layout_width="250sp"
                android:layout_height="40sp"
                android:layout_below="@id/quantitytv"
                android:layout_alignLeft="@+id/mrptv"
                android:background="@drawable/edittext" />

            <Button
                android:id="@+id/addproduct"
                android:layout_width="150sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_below="@+id/productquantity"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="46sp"
                android:background="@drawable/buttons"
                android:text="Add Product" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>