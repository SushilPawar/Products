<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbackground"
    tools:context=".Company.company_add_company">

    <androidx.cardview.widget.CardView
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="20sp"
        android:padding="20sp"
        app:cardElevation="10sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/compnaytv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="45dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="46dp"
                android:text="Company Name"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:paddingLeft="10sp"
                android:id="@+id/subcompanyname"
                android:layout_width="250sp"
                android:layout_height="40sp"
                android:layout_below="@id/compnaytv"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="41dp"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="-1dp"
                android:layout_marginEnd="43dp"
                android:layout_marginRight="43dp"
                android:background="@drawable/edittext" />

            <TextView
                android:id="@+id/dealertv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subcompanyname"
                android:layout_alignLeft="@+id/subcompanyname"
                android:layout_marginTop="10sp"
                android:text="Dealer Name"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:paddingLeft="10sp"
                android:id="@+id/subdealername"
                android:inputType="textEmailAddress"
                android:layout_width="250sp"
                android:layout_height="40sp"
                android:layout_below="@id/dealertv"
                android:layout_alignLeft="@+id/subcompanyname"
                android:background="@drawable/edittext" />

            <TextView
                android:id="@+id/sectortv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subdealername"
                android:layout_alignLeft="@+id/subcompanyname"
                android:layout_marginTop="10sp"
                android:text="Sector"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <EditText
                android:paddingLeft="10sp"
                android:id="@+id/subsector"
                android:inputType="number"
                android:layout_width="250sp"
                android:layout_height="40sp"
                android:layout_below="@id/sectortv"
                android:layout_alignLeft="@+id/subcompanyname"
                android:background="@drawable/edittext" />

            <Button
                android:id="@+id/subregister"
                android:layout_width="150sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subsector"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="46sp"
                android:background="@drawable/buttons"
                android:text="Register" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>